<%= simple_form_for @contact_form do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, :required => false %>

  <%= f.label :email %>
  <%= f.text_field :email, :required => false %>

  <%= f.label :message %>
  <%= f.text_field :message, :as => :text, :required => false %>
  <div class="hidden">
    <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
  </div>
  <%= f.button :submit, 'Send message' %>
<% end %>
